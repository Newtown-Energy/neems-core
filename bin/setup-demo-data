#!/bin/bash

# Demo data setup script for NEEMS using neems-admin CLI
# This script creates the same demo data as demo-data.sql

set -e  # Exit on any error

# Default to DATABASE_URL if no parameter provided
DB_PATH=${1:-${DATABASE_URL}}

if [ -z "$DB_PATH" ]; then
    echo "Error: No database path provided and DATABASE_URL not set"
    echo "Usage: $0 [database_path]"
    exit 1
fi

echo "Setting up demo data for database: $DB_PATH"

# Export the database URL for neems-admin to use
export DATABASE_URL="$DB_PATH"

# Add demo companies (idempotent - will skip if already exists)
echo "Adding demo companies..."
./bin/neems-admin company add --name "Sunny Solar" 2>/dev/null || echo "Company 'Sunny Solar' already exists"
./bin/neems-admin company add --name "Best BESS" 2>/dev/null || echo "Company 'Best BESS' already exists"

# Get company IDs
echo "Getting company IDs..."
SUNNY_SOLAR_ID=$(./bin/neems-admin company ls | grep "Sunny Solar" | sed 's/.*ID: \([0-9]*\).*/\1/' | head -1)
BEST_BESS_ID=$(./bin/neems-admin company ls | grep "Best BESS" | sed 's/.*ID: \([0-9]*\).*/\1/' | head -1)
NEWTOWN_ENERGY_ID=$(./bin/neems-admin company ls | grep "Newtown Energy" | sed 's/.*ID: \([0-9]*\).*/\1/' | head -1)

if [ -z "$SUNNY_SOLAR_ID" ] || [ -z "$BEST_BESS_ID" ]; then
    echo "Error: Could not find company IDs"
    exit 1
fi

echo "Sunny Solar ID: $SUNNY_SOLAR_ID"
echo "Best BESS ID: $BEST_BESS_ID"
echo "Newtown Energy ID: $NEWTOWN_ENERGY_ID"

# Add demo users for Sunny Solar
echo "Adding users for Sunny Solar..."
./bin/neems-admin user add --email "admin@sunnysolar.com" --password "admin" --company-id "$SUNNY_SOLAR_ID" 2>/dev/null || echo "User admin@sunnysolar.com already exists"
./bin/neems-admin user add --email "user@sunnysolar.com" --password "admin" --company-id "$SUNNY_SOLAR_ID" 2>/dev/null || echo "User user@sunnysolar.com already exists"

# Add demo users for Best BESS
echo "Adding users for Best BESS..."
./bin/neems-admin user add --email "admin@bestbess.com" --password "admin" --company-id "$BEST_BESS_ID" 2>/dev/null || echo "User admin@bestbess.com already exists"
./bin/neems-admin user add --email "user@bestbess.com" --password "admin" --company-id "$BEST_BESS_ID" 2>/dev/null || echo "User user@bestbess.com already exists"

# Add demo user for Newtown Energy
echo "Adding user for Newtown Energy..."
./bin/neems-admin user add --email "james@newtown.energy" --password "admin" --company-id "$NEWTOWN_ENERGY_ID" 2>/dev/null || echo "User james@newtown.energy already exists"

# Add demo sites for Sunny Solar
echo "Adding sites for Sunny Solar..."
./bin/neems-admin site add --name "Bat Farm 1" --address "123 Bat Farm Road, Rural Area" --latitude "40.7128" --longitude "-74.0060" --company-id "$SUNNY_SOLAR_ID" 2>/dev/null || echo "Site 'Bat Farm 1' already exists"
./bin/neems-admin site add --name "Bat Farm 2" --address "456 Bat Farm Lane, Rural Area" --latitude "40.7580" --longitude "-73.9855" --company-id "$SUNNY_SOLAR_ID" 2>/dev/null || echo "Site 'Bat Farm 2' already exists"

# Add demo sites for Best BESS
echo "Adding sites for Best BESS..."
./bin/neems-admin site add --name "B1" --address "789 Battery Street, Industrial Zone" --latitude "40.6892" --longitude "-74.0445" --company-id "$BEST_BESS_ID" 2>/dev/null || echo "Site 'B1' already exists"
./bin/neems-admin site add --name "B2" --address "321 Energy Avenue, Industrial Zone" --latitude "40.7282" --longitude "-74.0776" --company-id "$BEST_BESS_ID" 2>/dev/null || echo "Site 'B2' already exists"

# Assign admin role to admin users (role 3 is 'admin')
echo "Assigning admin roles..."
./bin/neems-admin user add-role --email "admin@sunnysolar.com" --role-id 3 2>/dev/null || echo "Admin role already assigned to admin@sunnysolar.com"
./bin/neems-admin user add-role --email "admin@bestbess.com" --role-id 3 2>/dev/null || echo "Admin role already assigned to admin@bestbess.com"

# Assign user role to regular users (role 4 is 'user')
echo "Assigning user roles..."
./bin/neems-admin user add-role --email "user@sunnysolar.com" --role-id 4 2>/dev/null || echo "User role already assigned to user@sunnysolar.com"
./bin/neems-admin user add-role --email "user@bestbess.com" --role-id 4 2>/dev/null || echo "User role already assigned to user@bestbess.com"

# Assign newtown-admin role to james@newtown.energy (role 1 is 'newtown-admin')
echo "Assigning newtown-admin role..."
./bin/neems-admin user add-role --email "james@newtown.energy" --role-id 1 2>/dev/null || echo "Newtown-admin role already assigned to james@newtown.energy"

echo "Demo data setup complete!"
echo ""
echo "Demo users created:"
echo "  Sunny Solar:"
echo "    admin@sunnysolar.com (password: admin) - Admin role"
echo "    user@sunnysolar.com (password: admin) - User role"
echo "    Sites: Bat Farm 1, Bat Farm 2"
echo "  Best BESS:"
echo "    admin@bestbess.com (password: admin) - Admin role"
echo "    user@bestbess.com (password: admin) - User role"
echo "    Sites: B1, B2"
echo "  Newtown Energy:"
echo "    james@newtown.energy (password: admin) - Newtown-admin role"
